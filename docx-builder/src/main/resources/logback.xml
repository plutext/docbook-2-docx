<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.docx4j.TraversalUtil" level="INFO"/>
    <logger name="org.docx4j.jaxb" level="WARN"/>
    <logger name="org.docx4j.XmlUtils" level="WARN"/>
    <logger name="org.docx4j.utils" level="WARN"/>
    <logger name="org.docx4j.openpackaging" level="WARN"/>
</configuration>